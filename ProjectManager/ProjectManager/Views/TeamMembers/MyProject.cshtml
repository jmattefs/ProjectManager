@model ProjectManager.Models.TeamMember

@{
    ViewBag.Title = "MyProject";
}

<h2>MyProject</h2>
<br />

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Task: @Model.Task</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <h4> @Html.LabelFor(model => model.TaskComplete, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaskComplete, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TaskComplete, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update Task Status" class="btn btn-default" />
            </div>
        </div>
    </div>

}

    
    
    
